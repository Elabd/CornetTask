@model TodoList.Web.Models.TodoViewModel.TodoViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>ToDo</h2>

<div class="table-wrapper-scroll-y my-custom-scrollbar">

    <table class="table table-bordered table-striped mb-0">
        <thead>
            <tr>
                <th scope="col">
                    Update Status
                </th>
                <th scope="col">
                    Title
                </th>
                <th scope="col">Done</th>
                <th scope="col">Added Date</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Todos)
            {
                <tr>
                    <td scope="row">
                        <form asp-action="UpdateDone" method="post">
                            <input type="checkbox" class="done-checkbox" asp-for="@item.Done" />
                            <input type="hidden" name="id" value="@item.Id" />
                        </form>
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @(item.Done ? "Yes" : "No")
                    </td>
                    <td>
                        <span data-value="@item.AddedDateTime" class="timeStampValue">
                            @item.AddedDateTime
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
<p>
    <a class="btn btn-success" asp-action="Create">Add Todo</a>
</p>
<hr />
<h2>Done</h2>
<table class="table table-bordered table-striped mb-0">
    <thead>
        <tr>

            <th scope="col">
                Title
            </th>
            <th scope="col">Done</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dones)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    <span data-value="@item.AddedDateTime" class="timeStampValue">
                        @item.AddedDateTime
                    </span>
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>